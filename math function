#include <iostream>
#include <cmath>

using namespace std;
int main()
{
    double num{};
    cout<<"Enter a number: ";
    cin>>num;

    cout<<"the square root of "<<num<<" is "<<sqrt(num)<<endl;
    cout<<"THe cube root of "<<num<<" is "<<cbrt(num)<<endl;

    cout<<"The sine of "<<num<<" is "<<sin(num)<<endl;
    cout<<"The cosine of "<<num<<" Is "<<cos(num)<<endl;

    double power{};
    cout<<"Entre the power of a number: ";
    cin>>power;

    cout<<"the power of "<<num<<" is "<<pow(num,power)<<endl;


}
